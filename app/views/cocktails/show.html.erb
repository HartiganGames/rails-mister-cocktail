<p>show a cocktail</p>

<h1><%= @cocktail.name %></h1>
  <ul>
    <%  @cocktail.doses.each do |dose|%>
      <li>
        <%= dose.description%>
        <%= dose.ingredient.name %>
        <%= link_to "Delete dose",dose_path(dose),method: :delete, data: {confirm: "Are you sure?"}%>
      </li>
    <% end %>
  </ul>
<div>
  <%= link_to "Add cocktail ingredients", new_cocktail_dose_path(@cocktail) %>
</div>
<div>
  <%= link_to "Home", cocktails_path  %>
</div>
